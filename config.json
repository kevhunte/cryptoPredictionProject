{
    "prep": {
        "n_steps": 50,
        "scale": true,
        "shuffle": false,
        "lookup_step": 1,
        "split_by_date": true,
        "test_size": 0.2, 
        "feature_columns": ["Close", "Volume", "Open", "High", "Low", "Marketcap"],
        "debug": false
    },
    "create": {
        "sequence_length": 50,
        "units": 256,
        "n_layers": 2,
        "dropout": 0.2,
        "loss": "mean_absolute_error",
        "optimizer": "rmsprop", 
        "bidirectional": true,
        "activation": "linear"
    },
    "train": {
        "output_dir": "output",
        "BATCH_SIZE": 64,
        "EPOCHS": 3
    },
    "test": {
        "LOSS": "mean_absolute_error",
        "SCALE": true,
        "LOOKUP_STEP": 1,
        "N_STEPS": 50,
        "MARGIN": 0.005,
        "show_graph": false,
        "save_stats": false
    }
}
